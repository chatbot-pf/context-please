{
    "name": "context-please",
    "version": "0.1.0",
    "description": "A powerful code indexing tool with multi-platform support (fork of claude-context)",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "pnpm -r --filter='!./examples/*' build && pnpm -r --filter='./examples/*' build",
        "build:core": "pnpm --filter @pleaseai/context-please-core build",
        "build:vscode": "pnpm --filter semanticcodesearch compile",
        "build:mcp": "pnpm --filter @pleaseai/context-please-mcp build",
        "dev": "pnpm -r dev",
        "dev:core": "pnpm --filter @pleaseai/context-please-core dev",
        "dev:vscode": "pnpm --filter semanticcodesearch watch",
        "dev:mcp": "pnpm --filter @pleaseai/context-please-mcp dev",
        "clean": "pnpm -r clean",
        "test": "pnpm -r test",
        "test:integration": "pnpm --filter @pleaseai/context-please-core test:integration && pnpm --filter @pleaseai/context-please-mcp test:integration",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r run lint:fix",
        "typecheck": "pnpm -r run typecheck",
        "release:core": "pnpm --filter @pleaseai/context-please-core... run build && pnpm --filter @pleaseai/context-please-core publish --access public --no-git-checks",
        "release:mcp": "pnpm --filter @pleaseai/context-please-mcp... run build && pnpm --filter @pleaseai/context-please-mcp publish --access public --no-git-checks",
        "release:vscode": "pnpm --filter @pleaseai/context-please-core build && pnpm --filter semanticcodesearch run webpack && pnpm --filter semanticcodesearch release",
        "example:basic": "pnpm --filter context-please-basic-example start",
        "benchmark": "node scripts/build-benchmark.js"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^5.4.1",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "eslint": "^9.37.0",
        "eslint-plugin-format": "^1.0.2",
        "https-browserify": "^1.0.0",
        "os-browserify": "^0.3.0",
        "rimraf": "^6.0.1",
        "stream-http": "^3.2.0",
        "tree-sitter-cli": "^0.25.6",
        "tsx": "^4.20.6",
        "typescript": "^5.8.3",
        "url": "^0.11.4",
        "vm-browserify": "^1.1.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pleaseai/context-please.git"
    },
    "license": "MIT",
    "author": "PleaseAI"
}